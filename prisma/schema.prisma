generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String     @id @default(uuid())
  name          String     @unique
  acronym       String?
  description   String?
  homeWebsite   String?
  logo          Bytes?
  eventSources  EventSource[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model EventSource {
  id             String      @id @default(uuid())
  organizationId String
  url            String
  scrapes        ScrapeJob[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model ScrapeJob {
  id               String        @id @default(uuid())
  eventSourceId    String
  url              String
  scrapeStrategy   ScrapeStrategy
  customSelectors  Json?
  lastScraped      DateTime?
  scrapeStatus     ScrapeStatus  @default(PENDING)
  scrapeMessage    String?
  eventSource      EventSource   @relation(fields: [eventSourceId], references: [id])
  events           Event[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Event {
  id           String    @id @default(uuid())
  scrapeJobId  String
  eventName    String
  startDate    DateTime
  endDate      DateTime?  // <-- optional if some events are one-day only
  location     Json       // Expected to be GeoJSON Point
  price        String?
  scrapeJob    ScrapeJob  @relation(fields: [scrapeJobId], references: [id])
  createdAt    DateTime   @default(now())
}

enum ScrapeStrategy {
  generic_ai
  pdf
  image
  css_calendar
}

enum ScrapeStatus {
  PENDING
  RUNNING
  SUCCESS
  ERROR
}

